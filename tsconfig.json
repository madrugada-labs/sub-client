{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"typeRoots": ["./node_modules/@types"],
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["components/*"],
			"@/gql/*": ["generated/*"],
			"@/constants/*": ["constants/*"],
			"@/pages/*": ["pages/*"],
			"@/styles/*": ["styles/*"],
			"@/hooks/*": ["hooks/*"],
			"@/settings/*": ["settings/*"],
			"@/utils/*": ["utils/*"]
			//	add paths if more folders are required
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
